<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.micdm.okeybalance.fragments.LoginFragment">
    <LinearLayout
        android:id="@+id/f__login__fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <EditText
            android:id="@+id/f__login__card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="number"
            android:hint="@string/f__login__card_number"
            android:background="@drawable/text_field_background"/>
        <EditText
            android:id="@+id/f__login__password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:hint="@string/f__login__password"
            android:background="@drawable/text_field_background"/>
    </LinearLayout>
    <TextView
        android:id="@+id/f__login__error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/f__login__fields"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:visibility="gone"/>
    <Button
        android:id="@+id/f__login__submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/f__login__error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/f__login__submit"/>
</RelativeLayout>
