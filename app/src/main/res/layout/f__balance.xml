<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/f__balance__container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.micdm.okeybalance.fragments.BalanceFragment">
    <ImageView
        android:id="@+id/f__balance__share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_white_36dp"/>
    <ImageView
        android:id="@+id/f__balance__logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_exit_to_app_white_36dp"/>
    <LinearLayout
        android:id="@+id/f__balance__balance_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/f__balance__balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Display3"/>
        <TextView
            android:id="@+id/f__balance__tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            style="@style/TextAppearance.AppCompat.Body1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/f__balance__delta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/f__balance__balance_container"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Display1"/>
</RelativeLayout>
